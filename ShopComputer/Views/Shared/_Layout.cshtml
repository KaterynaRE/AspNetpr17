<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <header class="p-3 text-bg-dark">
        <div class="container-fluid">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                </a>
                @if (User.Identity != null && User.IsInRole("admin"))
                {
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Menu
                        </button>
                        <ul class="dropdown-menu">
                            <li><a asp-action="Index" asp-controller="Claims" class="dropdown-item">Твердження</a></li>
                            <li><a asp-action="Create" asp-controller="Roles" class="dropdown-item">Створити роль</a></li>
                            <li><a asp-action="UserList" asp-controller="Roles" class="dropdown-item">Ролі користувачей</a></li>
                            <li><a asp-action="Index" asp-controller="Users" class="dropdown-item">Список користувачей</a></li>
                            <li><a asp-action="Index" asp-controller="Roles" class="dropdown-item">Ролі</a></li>
                        </ul>
                    </div>
                }
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    @if (User.Identity != null && User.IsInRole("manager"))
                    {
                        <li><a asp-action="Index" asp-controller="ProductImages" class="nav-link px-2 text-white">Зображення</a></li>
                    }
                    <li><a asp-action="Index" asp-controller="Home" class="nav-link px-2 text-white">Головна</a></li>
                    <li><a asp-action="Index" asp-controller="Products" class="nav-link px-2 text-white">Товари</a></li>
                    <li><a asp-action="Index" asp-controller="Categories" class="nav-link px-2 text-white">Категорії</a></li>
                    <li><a asp-action="Index" asp-controller="Brands" class="nav-link px-2 text-white">Бренди</a></li>
                </ul>
                <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                    <input type="search" class="form-control form-control-dark text-bg-dark" placeholder="Search..." aria-label="Search">
                </form>
                <div class="text-end">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <span class="ne-4">Привіт @User.Identity.Name</span>
                        <a asp-action="Logout" asp-controller="Account"
                           class="btn btn-outline-light me-2">Logout</a>
                    }
                    else
                    {
                        <a asp-action="Login" asp-controller="Account" class="btn btn-outline-light me-2">Login</a>
                        <a asp-action="Register" asp-controller="Account" class="btn btn-warning">Sign-up</a>
                    }
                </div>
                <div style="margin:5px;">
                        @await Component.InvokeAsync("CartDetails")
                    @* <vc:cart-details /> *@
                </div>
            </div>
        </div>
    </header>
    <div id="main" class="container">
        @RenderBody()
    </div>
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <div class="col-md-4 d-flex align-items-center">
                <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                    <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
                </a>
                <span class="mb-3 mb-md-0 text-body-secondary">© 2024 Company, Inc</span>
            </div>

            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter"></use></svg></a></li>
                <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram"></use></svg></a></li>
                <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook"></use></svg></a></li>
            </ul>
        </footer>
    </div>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
